# Environment Configuration
# Copy this file to .env.local and update values

# Adapter Mode
# 'mock' = Local simulation without blockchain (default for development)
# 'devnet' = Connect to Solana devnet (requires deployed program)
NEXT_PUBLIC_ADAPTER_MODE=mock

# Solana Network
# Options: 'devnet', 'testnet', 'mainnet-beta'
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Solana RPC Endpoint (optional)
# Leave blank to use default public endpoints
# For production, use a dedicated RPC provider (e.g., Helius, QuickNode)
NEXT_PUBLIC_SOLANA_RPC=

# Plexo Program ID (required for devnet mode)
# Replace with your deployed program's public key
NEXT_PUBLIC_PLEXO_PROGRAM_ID=11111111111111111111111111111111
